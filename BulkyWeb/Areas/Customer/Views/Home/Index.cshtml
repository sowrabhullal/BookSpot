@model List<Product>

<div class="container mt-5">
    <div class="row d-flex flex-wrap justify-content-start">
        @foreach (var i in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <!-- Wrap the entire card inside an anchor tag to make it clickable -->
                <a asp-controller="Home" asp-action="Details" asp-route-id="@i.Id" class="card-link" style="text-decoration: none; color: inherit;">
                    <div class="card h-100 shadow-sm border-0" style="max-width: 220px; transition: transform 0.3s, box-shadow 0.3s;">
                        <div class="image-container" style="padding: 10px; box-sizing: border-box;">
                            <!-- Increased padding for image container -->
                            <img src="@i.ImageUrl" class="img-fluid" style="width: 100%; height: auto; object-fit: contain;" alt="@i.Title" />
                        </div>

                        <div class="card-body" style="padding: 10px;">
                            <!-- Slightly increased padding for card body -->
                            <h5 class="card-title font-weight-bold" style="color: #4A90E2; font-size: 1.1rem;">@i.Title</h5> <!-- Increased font size -->

                            <p class="card-text text-muted small" style="margin: 0;">By: @i.Author</p>

                            <div class="mb-1">
                                <span class="d-block text-dark font-weight-bold" style="font-size: 0.9rem;">List Price: <span class="text-success">@i.ListPrice.ToString("c")</span></span>
                                <span class="d-block text-dark font-weight-bold" style="font-size: 0.9rem;">Price for 50+: <span class="text-warning">@i.Price50.ToString("c")</span></span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
