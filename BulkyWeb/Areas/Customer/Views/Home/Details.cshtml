@model Product

<form method="post">
    <div class="mt-4">
        <div class="py-3">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <i class="bi bi-arrow-left"></i><small> Back</small>
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                    <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;" alt="@Model.Title" />

                    <!-- Title and Author below the image -->
                    <div class="mt-3">
                        <h3 class="text-dark text-uppercase">@Model.Title</h3>
                        <p class="text-dark text-opacity-50 fw-semibold mb-0">by @Model.Author</p>
                    </div>
                </div>
                <div class="col-12 col-lg-6 offset-lg-1">
                    <div class="col-12 col-md-6 pb-4">
                        <span class="badge bg-danger text-light">@Model.Category.Name</span>
                    </div>

                    <div class="row ps-2">
                        <h6 class="text-dark text-opacity-50">ISBN: <strong>@Model.ISBN</strong></h6>
                    </div>
                    <div class="row ps-2">
                        <h6 class="text-dark text-opacity-50 pb-2">
                            List Price:
                            <span class="text-decoration-line-through">$@Model.ListPrice</span>
                        </h6>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">1-50</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">51-100</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white border-bottom">
                            <div class="text-dark text-opacity-50 fw-semibold">100+</div>
                        </div>
                    </div>
                    <div class="row text-center ps-2">
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div></div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>$@Model.Price</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>$@Model.Price50</div>
                        </div>
                        <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                            <div>$@Model.Price100</div>
                        </div>
                    </div>
                    <div class="row pl-2 my-3">
                        <p class="text-secondary lh-sm">Description:</p>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white border-0 fw-semibold w-40" id="inputGroup-sizing-default">
                                    Count
                                </span>
                                <input type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <button class="btn btn-success btn-sm" style="transition: background-color 0.3s;">
                                <i class="bi bi-cart2"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    .text-primary {
        color: #007bff !important;
    }

    .rounded {
        border-radius: 0.5rem;
    }
</style>
