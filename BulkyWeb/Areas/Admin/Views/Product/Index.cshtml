@model List<Product>

<div class="row justify-content-between align-items-center">
    <div class="col-auto">
        <h2 class="text-primary">Products</h2>
    </div>
    <div class="col-auto">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-1"></i> Create New Product
        </a>
    </div>
</div>
<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <!-- Card Body -->
                    <div class="card-body">
                        <!-- Product Title -->
                        <h5 class="card-title text-primary">@product.Title</h5>
                        <!-- Product Author -->
                        <h6 class="card-subtitle mb-2 text-muted">Author: @product.Author</h6>
                        <!-- Product Description -->
                        <p class="card-text">@product.Description</p>
                        <!-- Product ISBN -->
                        <p class="card-text"><strong>ISBN:</strong> @product.ISBN</p>
                        <!-- Product Pricing -->
                        <p class="card-text">
                            <strong>List Price:</strong> $@product.ListPrice <br />
                            <strong>Price:</strong> $@product.Price <br />
                            <!-- <strong>Price (50+):</strong> $@product.Price50 <br />
                            <strong>Price (100+):</strong> $@product.Price100 -->
                        </p>
                    </div>
                    <!-- Card Footer with Operations -->
                    <div class="card-footer d-flex justify-content-between">
                        <!-- Edit Button -->
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <!-- Delete Button -->
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                           class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
