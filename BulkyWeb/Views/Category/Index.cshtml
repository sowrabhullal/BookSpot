@model List<Category>

<!-- Container for the Category List -->
<div class="container mt-4">
    <!-- Row for Title and Create Button -->
    <div class="row justify-content-between align-items-center">
        <div class="col-auto">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-auto">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill me-1"></i> Create New Category
            </a>
        </div>
    </div>

    <!-- Category Table -->
    <div class="table-responsive mt-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@i.Name</td>
                        <td>@i.DisplayOrder</td>
                        <td>
                            <div class="btn-group" role="group">
                                <!-- Edit Button -->
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <!-- Delete Button with Confirmation -->
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@i.Id"
                                   class="btn btn-danger mx-2"
                                   onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
